#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/newrelic-infra-redis/helpers/ctl_setup.sh 'newrelic-infra-redis'



export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)

    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u root:root newrelic-infra -config /var/vcap/jobs/newrelic-infra-redis/config/newrelic-infra.yml 

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: newrelic-infra_ctl {start|stop}"

    ;;

esac
exit 0
